@model WebApp.Models.admin.Product

@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Product</h4>
                <form class="forms-sample" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Name</label>
                        <input asp-for="Name" type="text" class="form-control" id="txtkode" placeholder="Kode" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Address</label>
                        <input asp-for="Address" type="text" class="form-control" id="txtinisial" placeholder="Inisial" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Phone</label>
                        <input asp-for="Phone" type="text" class="form-control" id="txtnama" placeholder="nama" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </form>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

