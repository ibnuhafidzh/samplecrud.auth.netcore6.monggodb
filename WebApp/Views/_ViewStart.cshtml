@{
    var context = ViewContext.HttpContext;
    var currentUser = context.User.Identity.Name;
    string controller = context.Request.RouteValues["controller"].ToString();
    string action = context.Request.RouteValues["action"].ToString();
    string clayout = "";
    switch (controller)
    {
        case "Signin":
            clayout = "~/Views/Shared/_LayoutLogin.cshtml";
            break;
        case "Register":
            clayout = "~/Views/Shared/_LayoutLogin.cshtml";
            break;
           
        default:
            //Admin layout
            clayout = "~/Views/Shared/_Layout.cshtml";
            switch (action)
            {
                case "Edit":
                    clayout = "~/Views/Shared/_LayoutChild.cshtml";
                    break;
                case "Details":
                    clayout = "~/Views/Shared/_LayoutChild.cshtml";
                    break;
                case "Delete":
                    clayout = "~/Views/Shared/_LayoutChild.cshtml";
                    break;
                default:
                    //Admin layout
                    clayout = "~/Views/Shared/_Layout.cshtml";
                    break;
            }
            break;
           
    }
    Layout = clayout;

}
